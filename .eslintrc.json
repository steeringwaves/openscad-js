{
	"extends": "@steeringwaves/eslint-config",
	"ignorePatterns": [
		"node_modules/"
	],
	"settings": {
		"import/external-module-folders": [],
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx", ".vue"],
				"moduleDirectory": ["node_modules"]
			},
			"alias": {
				"map": [["@/*", "./Vite/src"]],
				"extensions": [".vue", ".ts", ".tsx"]
			}
		}
	},
	"parserOptions": {
		"project": "**/tsconfig.json"
	}
}
